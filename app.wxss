/**app.wxss**/
page {
  width: 100%;
  height: 100%;
  overflow: hidden;
  outline: none;
  font-family:"Microsoft YaHei",Arial,Helvetica,sans-serif,"宋体";
}
.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 

.clearfix {
  clear: both;
}

.clearfix::after {
  display: block;
  height: 0;
  clear: both;
}

