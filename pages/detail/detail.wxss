.detail-page {
    width: 100%;
    height: 100%;
    /* overflow-y: hidden; */
}

.house-detail__container {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    z-index: 99;
}

.house-detail__bg {
    position: absolute;
    left: 0;
    top: 0;
    width: 0;
    height: 0;
    transform-origin: center center
}

.house-close {
    position: absolute;
    z-index: 99;
    width: 80rpx;
    left: 0;
    right: 0;
    margin: 0 auto;
}

.house-img {
    width: 80rpx;
    height: 80rpx;
}

/* .house-item-list {
    display: flex;
    justify-content: space-between;
} */

.house-img-item {
    display: block;
    width: 100%;
    height: 300rpx; 
    background-color: #eeeeee;
    margin: 0 auto;
}

.house-img__add {
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 100rpx;
    border-top: 1rpx solid #ffd845;
    background: #ffd7459a;
    color: #333;
    text-align: center;
    line-height: 100rpx;
}

.map {
    width: 100%;
    height: 600rpx;
    z-index: 0;
}

.house-detail__message {
    margin-top: 30rpx;
}

.detail-title {
    box-sizing: border-box;
    margin: 0 30rpx 10rpx;
    height:40rpx;
    font-size:12pt;
    color:#817e7e;
    border-left:7rpx #817e7e solid;
    margin-left:30rpx;
    padding-left:15rpx;
    line-height: 40rpx;
}

.house-detail__list{
    box-sizing: border-box;
    margin: 0 30rpx;
    column-count: 2;
    column-gap: 0;
}

.house-detail__item {
    font-size: 11pt;
    height: 48rpx;
    line-height: 48rpx;
}

.copy {
    width:35rpx;
    height:35rpx;
}

.house-detail__type {
    width: 100%;
    box-sizing: border-box;
    margin: 0 30rpx;
    font-size: 11pt;
}
.type-item {
    width:120rpx;
    height:30rpx;
    float: left;
}

.type-item image {
    width: 20rpx;
    height: 20rpx;
}

.clear {
    clear: both;
    height: 0;
    content: ""
}