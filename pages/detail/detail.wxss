.detail-page {
    width: 100%;
    height: 100%;
    /* overflow-y: hidden; */
}

.house-detail__container {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    z-index: 99;
}

.house-detail__bg {
    position: absolute;
    left: 0;
    top: 0;
    width: 0;
    height: 0;
    transform-origin: center center
}

.house-detail__item {
    width: 80%;
    margin: 20rpx auto 0;
}

.house-close {
    position: absolute;
    z-index: 99;
    width: 80rpx;
    left: 0;
    right: 0;
    margin: 0 auto;
}

.house-img {
    width: 80rpx;
    height: 80rpx;
}